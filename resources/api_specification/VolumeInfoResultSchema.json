{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha3" ]
    },
    "kind": {
      "type": "string",
      "enum": [ "Volume" ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "group": {
          "type": "string"
        },
        "cluster": {
          "type": "string"
        },
        "storageRequest": {
          "type": "string"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
        },
        "volumeMode": {
          "type": "string",
          "enum": ["FileSystem", "Block"]
        },
        "storageClass": {
          "type": "string"
        },
        "selectorMatchLabel": {
          "type": "string"
        },
        "selectorLabelExpressions": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": ["id","name","group","cluster","created"]
    },
    "contents": {
      "type": "object"
    }
  },
  "required": ["apiVersion","kind","metadata"]
}
