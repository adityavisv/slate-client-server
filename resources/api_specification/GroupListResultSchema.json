{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha3" ]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "apiVersion": {
            "type": "string",
            "enum": [ "v1alpha3" ]
          },
          "kind": {
            "type": "string",
            "enum": [ "Group" ]
          },
          "metadata": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "required": true
              },
              "id": {
                "type": "string",
                "required": true
              },
              "email": {
                "type": "string",
                "required": true
              },
              "phone": {
                "type": "string",
                "required": true
              },
              "scienceField": {
                "type": "string",
                "required": true
              },
              "description": {
                "type": "string",
                "required": true
              }
            },
            "required": ["name","id","email","phone","scienceField","description"]
          }
        },
        "required": ["apiVersion","kind","metadata"]
      }
    }
  },
  "required": ["apiVersion","items"]
}
